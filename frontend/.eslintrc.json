{
    "settings": {
        "react": {
            "version": "detect"
        },
        "import/core-modules": ["styled-jsx", "styled-jsx/css"]
    },
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "react"],
    "rules": {
        "react/react-in-jsx-scope": "off"
    }
}
